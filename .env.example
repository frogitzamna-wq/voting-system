# BSV Network Configuration
BSV_NETWORK=testnet
BSV_NODE_URL=https://api.whatsonchain.com/v1/bsv/test
BSV_NODE_API_KEY=

# Database Configuration
DATABASE_URL=postgresql://voting_user:voting_password@localhost:5432/voting_system
DB_HOST=localhost
DB_PORT=5432
DB_NAME=voting_system
DB_USER=voting_user
DB_PASSWORD=voting_password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Server Configuration
NODE_ENV=development
PORT=3100
HOST=0.0.0.0

# Microservices Ports
VOTE_API_PORT=3100
BALLOT_API_PORT=3101
VERIFICATION_API_PORT=3102
EXPLORER_API_PORT=3103

# Security
JWT_SECRET=change_this_to_a_random_secret_key_in_production
ENCRYPTION_KEY=change_this_to_a_32_byte_hex_key_in_production
SESSION_SECRET=change_this_to_a_random_session_secret

# BSV Wallet (for contract deployment)
DEPLOYER_PRIVATE_KEY=
DEPLOYER_ADDRESS=

# ZK-SNARK Configuration
ZK_PROVING_KEY_PATH=./src/zk/proving.key
ZK_VERIFICATION_KEY_PATH=./src/zk/verification.key
ZK_CIRCUIT_PATH=./src/zk/voteProof.out

# BSV Services (optional)
IDENTITY_SERVICE_URL=https://identity.bsvblockchain.org
UHRP_SERVICE_URL=https://uhrp.bsvblockchain.org
MESSAGE_BOX_URL=wss://messagebox.bsvblockchain.org
HEADERS_SERVICE_URL=https://headers.bsvblockchain.org

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# CORS
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change_this_in_production
