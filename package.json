{
  "name": "bsv-voting-system",
  "version": "1.0.0",
  "description": "Transparent, verifiable, privacy-preserving electronic voting system on BSV blockchain",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "compile": "npx scrypt-cli compile",
    "compile:watch": "npx scrypt-cli compile --watch",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "mocha --require tsx/cjs --timeout 30000 'tests/unit/**/*.test.ts'",
    "test:integration": "mocha --require tsx/cjs --timeout 60000 'tests/integration/**/*.test.ts'",
    "test:e2e": "mocha --require tsx/cjs --timeout 120000 'tests/e2e/**/*.test.ts'",
    "test:zk": "mocha --require tsx/cjs --timeout 60000 'tests/zk/**/*.test.ts'",
    "test:security": "mocha --require tsx/cjs --timeout 60000 'tests/security/**/*.test.ts'",
    "test:coverage": "c8 npm test",
    "test:watch": "mocha --require tsx/cjs --watch 'tests/**/*.test.ts'",
    "db:migrate": "node scripts/database/migrate.js",
    "db:seed": "node scripts/database/seed.js",
    "db:reset": "node scripts/database/reset.js",
    "cli": "node dist/cli/index.js",
    "cli:dev": "tsx src/cli/index.ts",
    "deploy:contracts": "tsx src/scripts/deploy-contracts.ts",
    "verify:contracts": "tsx src/scripts/verify-contracts.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "docker:build": "docker build -t voting-system:latest .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "k8s:deploy": "kubectl apply -f k8s/",
    "k8s:delete": "kubectl delete -f k8s/",
    "zk:compile": "cd src/zk && zokrates compile -i voteProof.zok",
    "zk:setup": "cd src/zk && zokrates setup",
    "zk:export": "cd src/zk && zokrates export-verifier"
  },
  "keywords": [
    "bsv",
    "blockchain",
    "voting",
    "election",
    "zero-knowledge",
    "zk-snarks",
    "privacy",
    "transparency",
    "scrypt",
    "smart-contracts"
  ],
  "author": "Raul Licea Ya√±ez <raul_li_cea@hotmail.es>",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@bsv/sdk": "^1.8.11",
    "axios": "^1.6.0",
    "bip32": "^4.0.0",
    "bip39": "^3.1.0",
    "bsv": "^2.0.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "inquirer": "^9.2.12",
    "merkletreejs": "^0.3.11",
    "pg": "^8.11.0",
    "pino": "^8.16.0",
    "prom-client": "^15.0.0",
    "redis": "^4.6.0",
    "scrypt-ts": "^1.4.5",
    "scrypt-ts-lib": "^0.1.28",
    "uuid": "^9.0.1",
    "zokrates-js": "^1.1.9"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "c8": "^8.0.1",
    "chai": "^4.3.10",
    "eslint": "^8.55.0",
    "mocha": "^10.2.0",
    "prettier": "^3.1.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
